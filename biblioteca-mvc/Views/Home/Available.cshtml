@{
    Layout = "_LayoutNoFooter";
}

@model List<BookModel>
<div class="w-75 mx-auto my-5">
    <div class="dropdown d-flex justify-content-center">
        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            Ordina per
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="@Url.Action("Index", "Home")">Tutti</a></li>
            <li><a class="dropdown-item" href="@Url.Action("Available", "Home")">Disponibili</a></li>
            <li><a class="dropdown-item" href="@Url.Action("NonAvailable", "Home")">Non disponibili</a></li>
        </ul>
    </div>
    <table class="table table-striped mx-5">
        <thead>
            <tr>
                <th scope="col">Isbn</th>
                <th scope="col">Immagine</th>
                <th scope="col">Titolo</th>
                <th scope="col">Autore</th>
                <th scope="col">Trama</th>
                <th scope="col">Ebook</th>
                <th scope="col">Disponibilità</th>
            </tr>
        </thead>
        <tbody>
            @foreach (BookModel book in Model)
            {
                <tr>
                    <td>@book.Isbn</td>
                    <td><img class="img-fluid img_square" style="width: 15rem;" src="@book.ImageUrl" alt=""></td>
                    <td>@book.Name</td>
                    <td>@book.Author</td>
                    <td>
                        @book.Summary
                    </td>
                    <td>
                        @{
                            if (book.Ebook)
                            {
                                <span>Si</span>
                                ;
                            }
                            else
                            {
                                <span>No</span>
                                ;
                            }


                        }
                    </td>
                    <td>
                        @{
                            if (book.Available)
                            {
                                <span>Si</span>
                                ;
                            }
                            else
                            {
                                <span>No</span>
                                ;
                            }
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>